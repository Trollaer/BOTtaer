doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        block title
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
        script(src="https://code.jquery.com/jquery-3.5.1.min.js")
        script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous")
        link(rel="icon" type="image/png" href="/botbasicicon.png")
        block scripts
        
    body(onLoad="init()" class="bg-dark text-light main")
        main
            nav(class="navbar navbar-expand navbar-light bg-secondary pt-4 pb-4 border border-secondary rounded-bottom")
                div(class="collapse navbar-collapse d-flex justify-content-between align-items-center")
                    ul(class="navbar-nav")
                        div(class="d-flex align-items-cente")
                            img(src="/botbasicicon.png" alt="böt icon" height="50" width="50" class="mr-2")
                        div(class="d-flex align-items-center")
                            h2(class="text-center lh-1" style="color:#09fc81") B Ö T
                    div(class="custom-control custom-switch")
                        input(id="modeSwitch" class="custom-control-input" type='checkbox' onClick="switchMode()" checked ="true")
                        label(class="custom-control-label" for='modeSwitch') Darkmode
            div(class="container-fluid")
                block content
        footer(class="footer bg-secondary fixed-bottom text-light border border-secondary rounded-top")
            nav(class="navbar navbar-expand navbar-light bg-secondary pt-4 pb-4")
                div(class="collapse navbar-collapse d-flex justify-content-around align-items-center")
                    div(class="ml-3 mr-3 border rounded border-light p-2")
                        a(class="main-nav-link text-light" href="https://github.com/Trollaer/BOTtaer" target="_blank") GitHub repository
                    div(class="ml-3 mr-3 border rounded border-light p-2")
                        img(src="/botservericon.png" alt="böt icon" height="25" width="25" class="mr-2")
                        a(class="main-nav-link text-light" href="https://discord.gg/M986FMJ2G3" target="_blank") Support
                    div(class="ml-3 mr-3 border rounded border-light p-2")
                        a(class="main-nav-link text-light" href="https://heroku.com" target="_blank") Host